<script>
    function login() {
        var name = $("#name").val();
        var pwd = $("#pass").val();
        $.ajax({
            url: '/Home/LoginUser',
            type: 'post',
            data: { 'Name': name, 'Pwd': pwd },
            dataType: 'json',
            success: function (data) {
                console.log(data);
                if (data["Ret"] == 200) {
                    location.href = 'Index';
                }
            },
            error: function () {
                alert("登陆失败");
            }
        })
    }
</script>