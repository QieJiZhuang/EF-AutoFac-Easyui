    }

    /**
    * Name 打开修改窗口
    */
    function openEdit() {
        $('#wu-form-2').form('clear');
        var item = $('#dg').datagrid('getSelected');
        //alert(item.productid);return;
        $.ajax({
            url: '',
            data: '',
            success: function (data) {
                if (data) {
                    $('#wu-dialog-2').dialog('close');
                }
                else {
